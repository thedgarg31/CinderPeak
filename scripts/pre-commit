#!/bin/sh
# Pre-commit hook for CinderPeak
# This hook runs clang-format on all staged C++ files

# Check if clang-format is available
if ! command -v clang-format >/dev/null 2>&1; then
    echo "Error: clang-format is not installed or not in PATH"
    echo "Please install clang-format to use this pre-commit hook"
    exit 1
fi

# Get list of staged C++ files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cpp|hpp|h|cc|cxx)$')

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo "Running clang-format on staged C++ files..."

# Format each staged file
for FILE in $STAGED_FILES; do
    if [ -f "$FILE" ]; then
        echo "Formatting: $FILE"
        clang-format -i "$FILE"
        git add "$FILE"
    fi
done

echo "Pre-commit formatting complete!"
exit 0
